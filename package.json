{
  "name": "google-react",
  "version": "1.0.0",
  "engines": {
    "node": "12.13.0"
  },
  "description": "A Mern App that sources Google Books API and renders in React",
  "main": "server.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "cd client && npm install --only=dev && npm install && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+ https://github.com/armonkahil/GoogleReactBooks.git"
  },
  "author": "Armon Roberts",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/armonkahil/GoogleReactBooks/issues"
  },
  "homepage": "https://github.com/armonkahil/GoogleReactBooks#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.15.0",
    "@typescript-eslint/parser": "^2.15.0",
    "babel-eslint": "^10.0.3",
    "concurrently": "^5.0.2",
    "eslint": "^6.8.0",
    "eslint-config-react-app": "^5.1.0",
    "eslint-plugin-flowtype": "^4.5.3",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "nodemon": "^2.0.2"
  },
  "dependencies": {
    "axios": "^0.19.1",
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "gradient-string": "^1.2.0",
    "if-env": "^1.0.4",
    "mongoose": "^5.8.6"
  }
}
